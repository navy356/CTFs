    </nav>
    <header class="masthead" style="background-image:url('/img/admin-bg.jpg');">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-lg-8 mx-auto">
                    <div class="site-heading">
                        <h1>Admin Panel</h1><span class="subheading">Only admins can enter, are you a Hockage ?</span></div>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-lg-8 mx-auto">
                <% if (msg) { %>
                 <p> <%= msg %> </p>
                <% }else{ %>
                <p> Welcome Hockage, You can run the js file you want</p>
                <% } %>
                <form id="contactForm" name="sentMessage" novalidate="novalidate" method="post" action="/admin">
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls"><label>Environment Var Name</label><input class="form-control" type="text" id="envname" required="" placeholder="Environment Var Name" name="envname"><small class="form-text text-danger help-block"></small></div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls"><label>Environment Var</label><input class="form-control" type="text" id="env" required="" placeholder="Environment variable" name="env"><small class="form-text text-danger help-block"></small></div>
                    </div>

                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls"><label>Path</label><input class="form-control" type="text" id="path" required="" placeholder="Js File Path" name="path"><small class="form-text text-danger help-block"></small></div>
                    </div>
                    <div class="control-group"></div>
                    <div id="success"></div>
                    <div class="form-group"><button class="btn btn-primary" id="sendMessageButton" type="submit">Run</button></div>
                </form>
            </div>
        </div>
    </div>
    <hr>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-lg-8 mx-auto">
